<% include ../partials/header%>

    
    
     <header class="jumbotron">
         <div class="container">
             <h1>Welcome To YelpCamp! <% if(currentUser && currentUser.isAdmin){ %>
       Admin
    <% } %></h1>
             <p>View our hand-picked campgrounds from all over the world</p>
             <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
             </p>
             <p>
                 <form action="/campgrounds" method="GET" class="form-inline">
                     <div class="form-group">
                         <input type="text" name="search" placeholder="Campground Search..." class="form-control">
                         <input type="submit" value="search" class="btn btn-default">
                     </div>
                 </form>
             </p>
         </div>
     </header>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
         <div class="col-md-12">
             <% if(noMatch !== null){ %>
                 <h3><%=noMatch %></h3>
             <% } %>
         </div>
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img class="responsive" src="<%= campground.image %>">
                   <div class="caption">
                       <h4><%= campground.name %></h4>
                   </div>
                       <p>
                           <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>">View</a>
                       </p>
                </div>
            </div>
        <% }); %>
    </div>

<% include ../partials/footer %>
